    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Manage Shell",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "shell",
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "8001",
                "--noreloa",
                "--nothreading",
            ],
            "env": {
                "DJANGO_SETTINGS_MODULE": "core.settings"
            },
            "django": true
        },
        {
            "name": "Python: pytest",
            "type": "python",
            "request": "launch",
            "args": [
                "-m",
                "pytest",
            ],
            "env": {
                "DJANGO_SETTINGS_MODULE": "core.settings.test"
            },
        }
    ]
}